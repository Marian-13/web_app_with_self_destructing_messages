<div id="signup-container" class="std-container">
  <div id="signup-form-container" class="form-container">
    <span class="centered"><h1>Sign Up</h1></span>

    <form action="#" method="post">
      <div class="form-group">
        <label for="name">Name:</label><br />
        <input class="form-control" type="text" name="name" placeholder="Enter name"/>
      </div>

      <div class="form-group">
        <label for="email">Email:</label><br />
        <input class="form-control" type="text" name="email" placeholder="Enter email"/>
      </div>

      <div class="form-group">
        <label for="password">Password:</label><br />
        <input class="form-control" type="password" name="password" placeholder="Enter Password"/>
      </div>

      <div class="form-group">
        <label for="password_confirmation">Password Confirmation:</label><br />
        <input class="form-control" type="password" name="password_confirmation" placeholder="Enter Password"/>
      </div>

      <button type="submit" class="btn btn-primary">Submit</button>
    </form>

    <br />
    Already have account? <a href="/login">Log in</a>
  </div>

  <div id="signup-errors-container" class="errors-container">
    <% @user.errors.each do |error| %>
      <% error.each do |message| %>
        <div class="alert alert-danger"><%= message %></div>
      <% end %>
    <% end %>

    <% # TODO remove  %>
    <% flash[:notice_failure].each do |message| %>
      <div class="alert alert-danger"><%= message %></div>
    <% end %>
  </div>
</div>
